<Window x:Class="Led.Views.Controls.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Led.Views.Controls"
        xmlns:Behaviours="clr-namespace:Led.Behaviours"
        mc:Ignorable="d"
        Title="ColorPicker" Height="450" Width="800">
    <Grid>
        <Image Source="{Binding ColorRectangle}" Behaviours:MouseBehaviour.MouseDownCommand="{Binding MouseDownCommand}" Behaviours:MouseBehaviour.MouseMoveCommand="{Binding MouseMoveCommand}"/>
    </Grid>
</Window>
